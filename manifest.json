{
  "manifest_version": 3,
  "name": "Downpour",
  "version": "0.1.0",
  "description": "Displays outage status on websites",
  "permissions": ["tabs", "storage", "alarms", "notifications", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png"
    }
  }
}
